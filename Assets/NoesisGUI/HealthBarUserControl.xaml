<UserControl x:Class="DemoCollection.HealthBarUserControl"
             x:Name="HealthBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoCollection"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="512"
             d:DataContext="{d:DesignInstance {x:Type local:ViewModel}, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <LinearGradientBrush x:Key="HealthBarFill" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Offset="1" Color="Maroon"/>
            <GradientStop Offset="0" Color="Red"/>
        </LinearGradientBrush>
    </UserControl.Resources>

    <Grid DataContext="{Binding ElementName=HealthBar}">
        <ProgressBar Foreground="{DynamicResource HealthBarFill}"
                     BorderBrush="#BF000000"
                     RenderTransformOrigin="0.5,0.5"
                     Height="20"
                     Width="512"
                     Background="#BF000000"
                     Maximum="{Binding Path=Maximum}"
                     Value="{Binding Path=Current}"
                     BorderThickness="2,2,2,2"/>
    </Grid>
</UserControl>
